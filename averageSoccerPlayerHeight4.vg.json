{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 600,
  "title": "Average Height of Soccer Players by Countries",
  "projection": {"type": "equalEarth"},
  "background": "white",
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/dbuc0004/FIT3179/main/WorldMapWithGraticules.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "gray", "stroke": "white"},
      "encoding": {
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Height", "type": "quantitative", "title": "Height (cm)"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/dbuc0004/FIT3179/main/WorldMapWithGraticules.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_20"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/dbuc0004/FIT3179/main/WorldMapWithGraticules.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/dbuc0004/FIT3179/main/avgheight.csv"
            },
            "key": "Nationality",
            "fields": ["Height"]
          }
        },
        {
          "calculate": "datum.Height == 'NaN' ? 'No Data Available' : datum.Height",
          "as": "calculated_data"
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Height",
          "type": "quantitative",
          "title": "Height (cm)",
          "scale": {
            "type": "linear",
            "domain": [170, 190],
            "range": [
              "#edf8e9",
              "#c7e9c0",
              "#a1d99b",
              "#74c476",
              "#31a354",
              "#006d2c"
            ]
          },
          "legend": {
            "orient": "none",
            "legendX": 300,
            "legendY": 500,
            "direction": "horizontal"
          }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {
            "field": "calculated_data",
            "type": "quantitative",
            "title": "Height (cm)"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/dbuc0004/FIT3179/main/world_country_and_usa_states_latitude_and_longitude_values.csv"
      },
      "transform": [
        {
          "lookup": "country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/dbuc0004/FIT3179/main/avgheight.csv"
            },
            "key": "Nationality",
            "fields": ["Height"]
          }
        },
        {
          "filter": "datum.country == 'Brazil' || datum.country == 'United Kingdom' ||datum.country == 'France' ||datum.country == 'Germany' ||datum.country == 'Italy' ||datum.country == 'Spain'"
        }
      ],
      "mark": {"type": "circle"},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {"value": 110},
        "color": {"value": "black"},
        "tooltip": [
          {"field": "country", "type": "nominal", "title": "Country"},
          {"field": "Height", "type": "quantitative", "title": "Height (cm)"}
        ]
      }
    }
  ],
  "config": {}
}