{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "whitesmoke",
  "padding": 5,
  "width": 800,
  "height": 450,
  "title": {
    "text": "Average Height of Soccer Players by Countries",
    "frame": "group"
  },
  "data": [
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/dbuc0004/FIT3179/main/avgheight.csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "source_2",
      "url": "https://raw.githubusercontent.com/dbuc0004/FIT3179/main/WorldMapWithGraticules.json",
      "format": {"type": "topojson", "feature": "ne_110m_graticules_20"}
    },
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/dbuc0004/FIT3179/main/WorldMapWithGraticules.json",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_admin_0_countries",
        "parse": {}
      },
      "transform": [
        {
          "type": "formula",
          "expr": "datum[\"properties\"] && datum[\"properties\"][\"NAME\"]",
          "as": "properties.NAME"
        },
        {
          "type": "lookup",
          "from": "source_1",
          "key": "Nationality",
          "fields": ["properties.NAME"],
          "values": ["Height"]
        },
        {
          "type": "filter",
          "expr": "isValid(datum[\"Height\"]) && isFinite(+datum[\"Height\"])"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "size": {"signal": "[width, height]"},
      "fit": {"signal": "[data('source_0'), data('source_2')]"},
      "type": "equalEarth"
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "Height"},
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"], \"Height (cm)\": format(datum[\"Height\"], \"\")}"
          },
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
            "signal": "\"Height in Centimeters (CM): \" + (format(datum[\"Height\"], \"\")) + \"; Country: \" + (isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"]) + \"; Height (cm): \" + (format(datum[\"Height\"], \"\"))"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_1_marks",
      "type": "shape",
      "style": ["geoshape"],
      "from": {"data": "source_2"},
      "encode": {
        "update": {
          "fill": {"value": null},
          "stroke": {"value": "lightgray"},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "linear",
      "domain": [170, 190],
      "range": ["#fee0d2", "#fc9272", "#de2d26"],
      "interpolate": "hcl",
      "zero": false
    }
  ],
  "legends": [
    {
      "title": "Height in Centimeters (CM)",
      "fill": "color",
      "gradientLength": {"signal": "clamp(height, 64, 200)"}
    }
  ],
  "config": {}
}